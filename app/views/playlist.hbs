<!DOCTYPE html>
<html>
  <head>
    <link href='/styles/playlist.css' rel='stylesheet'>
  </head>
  <body>
    <div id='nav_hidden'></div>
    <div id='nav'>
      <a href='index.html' id='logo'>
        play<span>r</span>
      </a>
    </div>
    <div id='current'>
      <img src='../images/kanye.jpeg'>
      <div id='info'>
        <h2 id='title'>
          No Church in the Wild
        </h2>
        <h3 id='artist'>
          Kanye West
        </h3>
      </div>
      <div id='buttons'>
        <div id='left'>
          <a href='#' id='back'>
            <img src='../images/back.png'>
          </a>
        </div>
        <div id='center'>
          <a href='#' id='play_pause'>
            <img id='play' src='../images/play.png'>
            <img id='pause' src='../images/pause.png'>
          </a>
        </div>
        <div id='right'>
          <a href='#' id='next'>
            <img src='../images/next.png'>
          </a>
        </div>
      </div>
    </div>
    <ul id='playlist'>
    	{{#tracks}}
        {{> track }}
      {{/tracks}}
    </ul>
    <div id='rdio-wrapper'></div>
    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js'></script>
    <script src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js'></script>
    <script src='/js/jquery.rdio.min.js' type='text/javascript'></script>
    <script src='/socket.io/socket.io.js' type='text/javascript'></script>
    <script src='/js/playlist.js' type='text/javascript'></script>
    <script src='/js/frontend.js' type='text/javascript'></script>
  </body>
</html>
