<!DOCTYPE html>
<html>
  <head>
    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js'></script>
    <script src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js'></script>
    <script src='../js/playlist.js' type='text/javascript'></script>
    <link href='../styles/playlist.css' rel='stylesheet'>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io.connect('http://playr.dev:5000');
      socket.on('track-create', function (data) {
        console.log(data);
      });

      $(document).ready(function(){
            // on click of the button (jquery thing)
            // the things inside this clause happen only when 
            // the button is clicked.
            $("#play_pause").click(function(){
            	socket.emit("track-finish");
            });
      	});
    </script>
  </head>
  <body>
    <div id='nav_hidden'></div>
    <div id='nav'>
      <a href='index.html' id='logo'>
        play<span>r</span>
      </a>
    </div>
    <div id='current'>
      <img src='../images/kanye.jpeg'>
      <div id='info'>
        <h2 id='title'>
          No Church in the Wild
        </h2>
        <h3 id='artist'>
          Kanye West
        </h3>
      </div>
      <div id='buttons'>
        <div id='left'>
          <a href='#' id='back'>
            <img src='../images/back.png'>
          </a>
        </div>
        <div id='center'>
          <a href='#' id='play_pause'>
            <img id='play' src='../images/play.png'>
            <img id='pause' src='../images/pause.png'>
          </a>
        </div>
        <div id='right'>
          <a href='#' id='next'>
            <img src='../images/next.png'>
          </a>
        </div>
      </div>
    </div>
    <ul id='playlist'>
    	{{#tracks}}
<li class='list'>
<img src="{{ icon }}">
<div class='track_info'>
  <h3>
    {{ name }}
  </h3>
  <h4>
    {{ artist }}
  </h4>
  <h5>
    Sent by (999) 999-9999
  </h5>
</div>
<div class='approve'>
  <a class='remove active' href='#'>
    <img src='../images/remove.png'>
    Remove
  </a>
  <a class='add active' href='#'>
    <img src='../images/check.png'>
    Add
  </a>
</div>
</li>    	{{/tracks}}
    </ul>
  </body>
</html>
